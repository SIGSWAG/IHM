    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/inviter_profile_image"
        android:layout_toEndOf="@+id/inviter_profile_image"
        android:layout_marginLeft="5dp"
        android:id="@+id/info_invite_layout">

    </RelativeLayout>
-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="vertical" >

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/accept_invite"
            android:src="@drawable/ic_done_black_24dp"
            android:tint="@color/green_invit"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginBottom="8dp"
            style="@style/Base.Widget.AppCompat.ActionButton"
            />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/decline_invite"
            android:src="@drawable/ic_clear_black_24dp"
            android:tint="@color/materialRed"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="8dp"
            style="@style/Base.Widget.AppCompat.ActionButton"
            />

    </LinearLayout>

</LinearLayout>