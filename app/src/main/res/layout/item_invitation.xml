    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_gravity="center_vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Damien Gallet"
                android:id="@+id/sender_full_name"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="36dp"
                android:id="@+id/imageView7"
                android:src="@drawable/ic_access_time_black_24dp"/>
            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12:45"
                android:id="@+id/invite_datetime"
                android:textColor="@color/insaFontGray"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="8dp"
                android:id="@+id/eat_invite"
                android:src="@drawable/ic_place_black_24dp"
                />

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Snack du Campus"
                android:id="@+id/restaurant_invite_name"
                android:textColor="@color/insaFontGray"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="8dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_people_black_24dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3 amis y vont"
                android:id="@+id/invite_nb_friends_eating"
                android:adjustViewBounds="true"
                android:textColor="@color/insaFontGray"/>

        </LinearLayout>
    </LinearLayout>
