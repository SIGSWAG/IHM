<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:minHeight="88dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/invitation_accepted_normal">
        <com.insa.thibault.ihm.view.custom.RoundedImageView
            android:id="@+id/inviter_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/materialRed"
            android:src="@drawable/ic_person_black_24dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Damien Gallet"
                android:id="@+id/sender_full_name"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/eat_invite"
                    android:src="@drawable/ic_place_black_24dp"
                    />

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Beurk et puis quoi encore ?"
                    android:id="@+id/restaurant_invite_name"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/ic_access_time_black_24dp"/>
                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12h"
                    android:id="@+id/invite_datetime"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/ic_person_black_24dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3 amis y vont"
                    android:id="@+id/invite_nb_friends_eating"
                    android:adjustViewBounds="true"/>

            </LinearLayout>

        </LinearLayout>


    <!--
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/inviter_profile_image"
            android:layout_toEndOf="@+id/inviter_profile_image"
            android:layout_marginLeft="5dp"
            android:id="@+id/info_invite_layout">

        </RelativeLayout>
    -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/decline_invite"
                android:src="@drawable/ic_clear_black_24dp"
                android:tint="@color/materialRed"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                style="@style/Base.Widget.AppCompat.ActionButton"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acceptez une invitation ou allez manger Ã  un restaurant !"
        android:id="@+id/my_meal_text_hint"
        android:layout_marginLeft="@dimen/list_margin_left"
        android:layout_marginRight="@dimen/list_margin_left"
        android:textStyle="italic"
        android:textColor="@color/insaFontGray"
        android:adjustViewBounds="true"/>

    </LinearLayout>
</LinearLayout>